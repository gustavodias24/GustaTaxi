<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:backgroundTint="#F44336"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".EsperaActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Esperando o motorista aceitar ou cancelar a sua corrida!"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCancelar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:drawableLeft="@drawable/ic_cancel"
        android:drawableRight="@drawable/ic_void"
        android:text="Cancelar"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:indeterminateTint="#673AB7"
        android:progressTint="#673AB7"
        android:secondaryProgressTint="#673AB7"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textDetalhesCorrida"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="Detalhe da corrida:\n\nMotorista:\nDistÃ¢ncia:\nValor:"
        android:textColor="#404040"
        android:textSize="24sp"
        android:visibility="gone" />

</LinearLayout>